<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultText" parent="TextAppearance.AppCompat">
        <item name="android:textSize" type="">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/comfortaa</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>
    <style name="LabelText" parent="TextAppearance.AppCompat">
        <item name="android:textSize" type="">15sp</item>
        <item name="fontFamily">@font/comfortaa</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>
    <style name="LinkText" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize" type="">12sp</item>
        <item name="fontFamily">@font/comfortaa</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>
    <style name="RadioButton" parent="TextAppearance.AppCompat">
       <item name="android:gravity">center</item>
        <item name="fontFamily">@font/comfortaa</item>
        <item name="android:textColor">@color/black</item>
       <item name="android:background">@color/primary</item>
       <item name="android:layout_margin">16dp</item>
       <item name="android:button">@null</item>
    </style>
</resources>