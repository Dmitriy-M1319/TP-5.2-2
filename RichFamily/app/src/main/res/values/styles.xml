<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultText" parent="TextAppearance.AppCompat">
        <item name="android:textSize" type="">30sp</item>
        <item name="fontFamily">@font/comfortaa</item>
        <item name="android:layout_marginStart">16sp</item>
    </style>
    <style name="LabelText" parent="TextAppearance.AppCompat">
        <item name="android:textSize" type="">25sp</item>
        <item name="fontFamily">@font/comfortaa</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginStart">8sp</item>
    </style>
    <style name="LinkText" parent="TextAppearance.AppCompat">
        <item name="android:textSize" type="">16sp</item>
        <item name="fontFamily">@font/comfortaa</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginStart">8sp</item>
    </style>
</resources>