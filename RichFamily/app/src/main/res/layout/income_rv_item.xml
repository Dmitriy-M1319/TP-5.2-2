<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="todo"
            type="ru.vsu.cs.tp.richfamily.view.operation.IncomeFragment" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/income_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_margin="6dp"
        app:cardCornerRadius="3dp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/income_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                tools:text="Доход 1"/>
            <TextView
                android:id="@+id/income_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/income_name"
                tools:text="29/06/2021"/>
            <TextView
                android:id="@+id/income_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/income_date"
                android:layout_below="@id/income_name"
                tools:text="09:30 PM"/>

            <TextView
                android:layout_toEndOf="@id/income_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1000 руб."
                android:textSize="16sp"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/row_completeCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>