<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/operation_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_margin="6dp"
        app:cardCornerRadius="3dp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/operation_rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/half_margin"
                tools:text="Расход"/>

            <TextView
                android:id="@+id/operation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/operation_rec"
                android:layout_marginStart="@dimen/half_margin"
                tools:text="29/06/2021"/>

            <TextView
                android:id="@+id/operation_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/operation_date"
                android:layout_below="@id/operation_rec"
                tools:text="09:30 PM"/>

            <TextView
                android:id="@+id/operation_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_toEndOf="@id/operation_time"
                android:textSize="16sp"
                tools:text="1000" />

            <TextView
                android:id="@+id/wallet_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/operation_sum"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_marginStart="@dimen/half_margin"
                android:textSize="16sp"
                android:text="@string/rub_text" />

            <ImageView
                android:id="@+id/deleteOpIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/editOpIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_toStartOf="@+id/deleteOpIV"
                android:src="@drawable/ic_edit" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>