<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="cons"
            type="ru.vsu.cs.tp.richfamily.view.operation.ConsumptionFragment" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/consumption_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_margin="6dp"
        app:cardCornerRadius="3dp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/consumption_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                tools:text="Расход 1"/>
            <TextView
                android:id="@+id/consumption_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/consumption_name"
                tools:text="29/06/2021"/>
            <TextView
                android:id="@+id/consumption_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/consumption_date"
                android:layout_below="@id/consumption_name"
                tools:text="09:30 PM"/>

            <TextView
                android:id="@+id/consumption_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_toEndOf="@id/consumption_time"
                android:textSize="16sp"
                tools:text="1000" />

            <TextView
                android:id="@+id/wallet_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/consumption_sum"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginStart="@dimen/half_margin"
                android:text="Рублей"
                tools:text="Rub" />

            <ImageView
                android:id="@+id/deleteConsumptionIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/editConsumptionIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_margin"
                android:src="@drawable/ic_edit"
                android:layout_toStartOf="@+id/deleteConsumptionIV"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>