<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="template"
            type="ru.vsu.cs.tp.richfamily.view.template.TemplateFragment" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/template_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_margin="6dp"
        app:cardCornerRadius="3dp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/template_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                tools:text="Шаблон 1"/>
            <TextView
                android:id="@+id/template_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/template_name"
                tools:text="Мама"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1000 руб."
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/deleteTemplateIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/editTemplateIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_margin"
                android:src="@drawable/ic_edit"
                android:layout_toStartOf="@+id/deleteTemplateIV"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>